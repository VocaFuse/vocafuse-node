{
  "name": "vocafuse-node",
  "version": "0.1.0",
  "description": "A Node.js SDK for communicating with the VocaFuse API and building voice-enabled applications",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.ts'",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "vocafuse",
    "voice",
    "api",
    "sdk",
    "transcription",
    "audio",
    "speech",
    "typescript",
    "voicenotes"
  ],
  "author": "VocaFuse",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VocaFuse/vocafuse-node.git"
  },
  "bugs": {
    "url": "https://github.com/VocaFuse/vocafuse-node/issues"
  },
  "homepage": "https://vocafuse.com",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}

